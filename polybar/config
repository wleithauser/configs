[colors]
background = #2E3440
foreground = #D8DEE9
dark-gray = #4C566A
light-gray = ##E5E9F0
red = #BF616A
green = #A3BE8C
yellow = #EBCB8B
blue = #81a1c1
cyan = #88c0d0
primary = ${colors.blue}
background-alt = ${colors.dark-gray}
foreground-alt = ${colors.light-gray}
alert = ${colors.yellow}

[bar/main]
modules-right = cpu pulseaudio battery date time
modules-left = bspwm
font-0 = Liberation Mono:size=12;2
bottom = true
tray-position = right
separator = |
module-margin = 1
padding-right = 1
wm-restack = bspwm
border-size = 1
border-color = ${colors.background}
background = ${colors.background}
foreground = ${colors.foreground}

[module/date]
type = internal/date
date = %Y-%m-%d

[module/time]
type = internal/date
time = %H:%M
label = %time%

[module/battery]
type = internal/battery
full-at = 100
battery = BAT0
adapter = AC
label-charging = CHG %percentage%%
label-discharging = BAT %percentage%%

[module/pulseaudio]
type = internal/pulseaudio
label-muted = MUT %percentage%%
label-volume = VOL %percentage%%

[module/cpu]
type = internal/cpu
interval = 0.5
label = CPU %percentage%%

[module/bspwm]
type = internal/bspwm 
label-focused = %name%
label-focused-background = #3B4252
label-focused-foreground = ${colors.primary}
label-focused-padding = 1
label-empty =
label-empty-padding = 1
label-occupied = %name%
label-occupied-padding = 1
label-urgent = %name%
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 1
